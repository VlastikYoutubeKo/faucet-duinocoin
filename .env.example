# Duino-Coin Faucet Environment Configuration
# Rename this file to .env and update with your values

# Faucet Wallet Configuration
WALLET_USERNAME=katfaucet
WALLET_PASSWORD=your_password_here

# Application Configuration
APP_NAME=KatFaucet
APP_URL=https://yoursite.com
COOLDOWN_TIME=86400  # 24 hours in seconds
MEMO=KatFaucet

# Recaptcha Configuration
RECAPTCHA_SITE_KEY=your_site_key_here
RECAPTCHA_SECRET_KEY=your_secret_key_here

# Database Configuration
DB_TYPE=sqlite  # sqlite, mysql
DB_PATH=storage/database/faucet.sqlite
